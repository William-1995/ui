{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
      "main"
    ],
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
   {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "2 days"
   },
   {
          "matchDatasources": ["cdnurl"],
          "registryUrls":["https://git.sheetjs.com/SheetJS/sheetjs"]
    }
   ],
    "npm": {
        "fileMatch": ["package.json"],
        "enabled": true
    }, 
    "cdnurl": {
        "fileMatch": ["\\.html?$"],
        "enabled": true
    },
   "customDatasources": {
    "xlsx": {
      "defaultRegistryUrlTemplate": "https://cdn.sheetjs.com/xlsx-0.20.1/xlsx-0.20.1.tgz"
    }
  }
}

