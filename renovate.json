{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
      "main"
    ],
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
   {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "2 days"
   },
   {
          "matchDatasources": ["cdnurl"],
          "registryUrls":["https://git.sheetjs.com/SheetJS/sheetjs"]
    }
   ],
    "npm": {
        "fileMatch": ["package.json"],
        "enabled": true
    },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["package.json$"],
      "matchStrings": [
        "\"xlsx\":\\s*\"(?<currentValue>.*)\"\\s*//"
      ],
      "depNameTemplate": "https://cdn.sheetjs.com/xlsx-0.20.1/xlsx-0.20.1.tgz",
      "autoReplaceStringTemplate": " \"xlsx\" : \"https://cdn.sheetjs.com/xlsx-0.20.1/xlsx-0.20.1.tgz\"",
      "datasourceTemplate": "npm"
    }
  ]
}


