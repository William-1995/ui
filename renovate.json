{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
    "baseBranches": [
      "main"
    ],
  "extends": [
    "config:recommended"
  ],
  "npm": {
    "fileMatch": ["package.json"],
    "enabled": true
  },
  "packageRules": [
   {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "2 days"
   }
  ],
  "regexManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^package.json$"],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "\"xlsx\":\\s*\"(?<currentValue>.*)\"\\s*//"
      ],
      "datasourceTemplate": "custom.xlsx",
      "depNameTemplate": "https://cdn.sheetjs.com/"
    }
  ],
  "customDatasources": {
    "xlsx": {
      "defaultRegistryUrlTemplate": "https://cdn.sheetjs.com/",
      "format": "html"
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["custom.xlsx"],
      "extractVersion": "xlsx-0.20.1/xlsx-0.20.1.tgz$"
    }
  ]
}
